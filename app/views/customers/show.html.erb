<p style="color: green"><%= notice %></p>

<div class="card mb-3">
  <div class="card-body">
    <%= render @customer %>

    <div class="d-flex justify-content-between align-items-center">
      <%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-primary me-2" %>
      <%= button_to "Delete", @customer, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger me-2" %>
      <%= link_to "Back", customers_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
