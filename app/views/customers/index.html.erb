<p class="alert alert-success"><%= notice %></p>

<div class="container">
  <h1>Customers</h1>

  <div id="customers">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>URL</th>
          <th>Endpoint</th>
          <th>Bucket</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= link_to customer.name, customer %></td>
            <td><%= customer.url %></td>
            <td><%= customer.endpoint %></td>
            <td><%= customer.bucket %></td>
            <td><%= link_to 'Edit', edit_customer_path(customer), class: 'btn btn-primary' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New customer", new_customer_path, class: "btn btn-success" %>

  <%= render partial: 'menus/footer' %>
</div>