<p style="color: green"><%= notice %></p>

<%= render @document %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <%= link_to "Edit this document", edit_document_path(@document), class: "btn btn-primary" %>
  <%= link_to "Back to documents", documents_path, class: "btn btn-secondary" %>
  <% if @current_user&.can_destroy? %>
    <%= button_to "Destroy this document", @document, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  <% end %>
</div>
